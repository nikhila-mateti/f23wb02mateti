extends layout

block content
  h1= title
  if query
    p Rows: #{query.rows}
    p Columns: #{query.cols}

  - let rows = Number(query.rows);
  - let cols = Number(query.cols);
  
  if !(Number.isInteger(rows) && Number.isInteger(cols))
    p Invalid input. Please enter valid integers for rows and columns.
  else if rows < 1 || rows > 10
    p Rows should be between 1 and 10.
  else if cols < 1 || cols > 10
    p Columns should be between 1 and 10.
  else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            - let value = 0;
            - if (i === j)
              - value = 1;
            - else if (i === j + 1)
              - value = 2;
            - else if (i === j - 1)
              - value = i;
            td= value
